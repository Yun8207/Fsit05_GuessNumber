<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/game_bg">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/title_bg"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20sp">
            <TextView
                android:id="@+id/main_input4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="4dp"
                android:text=""
                android:textSize="28dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/main_input3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/main_input4"
                android:layout_marginHorizontal="4dp"
                android:text=""
                android:textSize="28dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/main_input2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/main_input3"
                android:layout_marginHorizontal="4dp"
                android:text=""
                android:textSize="28dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/main_input1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/main_input2"
                android:layout_marginHorizontal="4dp"
                android:text=""
                android:textSize="28dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />


        </RelativeLayout>
        <ListView
            android:id="@+id/main_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="10sp"
            android:background="@drawable/board_bg"></ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="16dp"

            >
            <Button
                android:id="@+id/main_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_1"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/main_btn_1"
                android:background="@drawable/btn_2"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_3"
                android:layout_toRightOf="@id/main_btn_2"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_4"
                android:layout_toRightOf="@id/main_btn_3"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="16dp"

            >
            <Button
                android:id="@+id/main_btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_5"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/main_btn_5"
                android:background="@drawable/btn_6"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_7"
                android:layout_toRightOf="@id/main_btn_6"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_8"
                android:layout_toRightOf="@id/main_btn_7"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="16dp"

            >
            <Button
                android:id="@+id/main_btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_9"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/main_btn_9"
                android:background="@drawable/btn_0"
                android:scaleX="0.9"
                android:onClick="inputNumber"
                />
            <Button
                android:id="@+id/main_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back"
                android:layout_toRightOf="@id/main_btn_0"
                android:scaleX="0.9"
                android:onClick="back"
                />
            <Button
                android:id="@+id/main_btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_clear"
                android:layout_toRightOf="@id/main_btn_back"
                android:scaleX="0.9"
                android:onClick="clear"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="16dp">
            <Button
                android:id="@+id/main_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="3dp"
                android:onClick="send"
                 />
            <Button
                android:id="@+id/main_btn_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_replay"
                android:layout_toRightOf="@id/main_btn_send"
                android:scaleX="0.9"
                android:onClick="replay"
                />

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>